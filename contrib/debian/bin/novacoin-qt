#!/bin/sh

set -e

umask 077

basedir=~/.zcashdark
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/zcashdark.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# ZcashDARK does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/zcashdark/zcashdark-qt "$@"
